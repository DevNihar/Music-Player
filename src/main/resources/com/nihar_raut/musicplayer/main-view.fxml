<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.Slider?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.nihar_raut.musicplayer.Controller">
    <left>
        <ListView>
            <Label text="Playlist"/>
            <Label text="Favourites"/>
            <Label text="Create New Playlist..."/>
        </ListView>
    </left>
    <center>
        <VBox>
            <TableView VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn text="Name" />
                    <TableColumn text="Duration" />
                </columns>
            </TableView>
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="10" right="10" left="10" bottom="10"/>
                </padding>
                <HBox alignment="CENTER_RIGHT" spacing="350">
                    <HBox>
                        <GridPane alignment="CENTER" hgap="10" vgap="10">
                            <Button GridPane.rowIndex="0" GridPane.columnIndex="0">
                                <graphic>
                                    <FontIcon iconLiteral="cil-media-step-backward" iconSize="15"/>
                                </graphic>
                            </Button>
                            <Button GridPane.rowIndex="0" GridPane.columnIndex="1" onAction="#handlePlayPause">
                                <graphic>
                                    <FontIcon fx:id="play_pause_icon" iconLiteral="cil-media-play" iconSize="15"/>
                                </graphic>
                            </Button>
                            <Button GridPane.rowIndex="0" GridPane.columnIndex="2">
                                <graphic>
                                    <FontIcon iconLiteral="cil-media-step-forward" iconSize="15"/>
                                </graphic>
                            </Button>
                            <!--                    <Slider scaleX="0.3" GridPane.rowIndex="0" GridPane.columnIndex="4"/>-->
                        </GridPane>
                    </HBox>

                    <HBox alignment="CENTER_RIGHT">
                        <Slider />
                    </HBox>
                </HBox>
                <Slider fx:id="songSlider" />
            </VBox>
        </VBox>
    </center>

</BorderPane>
